<!--
  Justin Albano
  May 31, 2013
  Oceans7 Software
  EagleSwag Android Mobile App
  Drawable resource defining the style for a round button. This button has a 
  normal state (non-clicked) and a clicked state. The clicked state is simply 
  the normal state with the gradient angle shifted by 180 degrees.
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="#6E6E6E" />
            <stroke android:width="1px" android:color="#80000000" />
            <corners android:radius="20dp" />
            <gradient android:angle="90" android:endColor="#0d3057" android:startColor="#1d4f88" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="#6E6E6E" />
            <stroke android:width="1px" android:color="#80000000" />
            <corners android:radius="20dp" />
            <gradient android:angle="270" android:endColor="#0d3057" android:startColor="#1d4f88" />
        </shape>
    </item>
</selector>